{
  "manifest_version": 3,
  "name": "Deshi Mula Extended",
  "version": "1.0",
  "description": "Decodes 1337 / Leet Speak text on deshi mula webpages and converts it to readable English.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://deshimula.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
